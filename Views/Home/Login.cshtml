@model LoginUser;

<div class="d-flex justify-content-around">
    <div class="col-5">
        <form asp-action="LoginMethod" asp-controller="Home" method="post">
            <div class="form-group">
                <span asp-validation-for="LoginEmail"></span>
                <label asp-for="LoginEmail"></label>
                <div>
                    <input class="form-control" asp-for="LoginEmail">
                </div>
            </div>
            <div class="form-group">
                <span asp-validation-for="LoginPassword"></span>
                <label asp-for="LoginPassword"></label>
                <input class="form-control" asp-for="LoginPassword">
            </div>
            <input class="btn btn-success" value="Login" type="submit">
        </form>
    </div>
    <a href="/">Need to Register?</a>

</div>